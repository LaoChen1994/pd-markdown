{
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",
    "rootDir": "./src",
    "moduleResolution": "node16",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["./src"]
}
